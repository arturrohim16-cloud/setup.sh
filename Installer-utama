#!/bin/bash
clear

# 1. Proses Pembersih VPS (Agar VPS Fresh)
echo -e "\e[1;35m[ # ]\e[0m \e[1;32mCleaning up system & updating...\e[0m"
apt update -y
apt upgrade -y
apt autoremove -y
apt clean
apt install curl wget sudo -y

# 2. Proses Ambil Script Utama Mas Aji
echo -e "\e[1;35m[ # ]\e[0m \e[1;32mDownloading Aji Master Script...\e[0m"
wget -q -O /usr/bin/menu "https://raw.githubusercontent.com/arturrohim16-cloud/Ajimaster-scriot/refs/heads/main/Scriptku"
chmod +x /usr/bin/menu

# 3. Tampilan Selesai (Banner Pelangi)
clear
echo -e "\e[1;35m◣━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━◢\e[0m"
echo -e "\e[1;35m┃\e[0m       \e[1;31mA\e[1;32mJ\e[1;33mI \e[1;34mM\e[1;35mA\e[1;36mS\e[1;31mT\e[1;32mE\e[1;33mR \e[1;34mP\e[1;35mR\e[1;36mE\e[1;31mM\e[1;32mI\e[1;33mU\e[1;34mM \e[1;35mI\e[1;36mN\e[1;31mS\e[1;32mT\e[1;33mA\e[1;34mL\e[1;35mL\e[1;36mE\e[1;31mR\e[0m       \e[1;35m┃\e[0m"
echo -e "\e[1;35m┸┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┸\e[0m"
echo -e "           \e[1;32mINSTALL SELESAI! SILAKAN KETIK:\e[0m"
echo -e "                   \e[1;107;31m menu \e[0m"
echo -e "\e[1;35m┹┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┰┲\e[0m"
